
@{
    Layout = "~/Views/Shared/_Layout.cshtml"; 
    ViewData["Title"] = "HRMS Dashboard";
}

<div class="content container-fluid">

    <!-- Page Header -->
    <div class="page-header">
        <div class="row">
            <div class="col-sm-12">
                <h3 class="page-title">Welcome To HRMS Portal</h3>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item active">Dashboard</li>
                </ul>
            </div>
        </div>
    </div>
    <!-- /Page Header -->

    <div class="row">
        <div class="col-md-6 col-sm-6 col-lg-6 col-xl-3">
            <div class="card dash-widget">
                <a asp-controller="MasterDashboard" asp-action="Index">
                    <div class="card-body">
                        <span class="dash-widget-icon"><i class="fa fa-building-o"></i></span><br><br>
                        <div class="dash-widget-info">
                            <h3>Masters</h3>
                            <!-- <span>Projects</span> -->
                        </div>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-md-6 col-sm-6 col-lg-6 col-xl-3">
            <div class="card dash-widget">
                <a asp-controller="SettingsDashboard" asp-action="Index">
                    <div class="card-body">
                        <span class="dash-widget-icon"><i class="fa fa-cogs"></i></span><br><br>
                        <div class="dash-widget-info">
                            <h3>Settings</h3>
                            <!-- <span>Clients</span> -->
                        </div>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-md-6 col-sm-6 col-lg-6 col-xl-3">
            <div class="card dash-widget">
                <a asp-controller="EmployeeDashboard" asp-action="Index">
                    <div class="card-body">
                        <span class="dash-widget-icon"><i class="fa fa-users"></i></span><br><br>
                        <div class="dash-widget-info">
                            <h3>Employee</h3>
                            <!-- <span>Tasks</span> -->
                        </div>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-md-6 col-sm-6 col-lg-6 col-xl-3">
            <div class="card dash-widget">
                <a href="~/LeaveDashboard">
                    <div class="card-body">
                        <span class="dash-widget-icon"><i class="fa fa-sign-out"></i></span><br><br>
                        <div class="dash-widget-info">
                            <h3>Leave</h3>
                            <!-- <span>Employees</span> -->
                        </div>
                    </div>
                </a>
            </div>
        </div>

        <div class="col-md-6 col-sm-6 col-lg-6 col-xl-3">
            <div class="card dash-widget">
                <a href="~/AttendanceDashboard">
                    <div class="card-body">
                        <span class="dash-widget-icon"><i class="fa fa-clock-o"></i></span><br><br>
                        <div class="dash-widget-info">
                            <h3>Attendance</h3>
                            <!-- <span>Projects</span> -->
                        </div>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-md-6 col-sm-6 col-lg-6 col-xl-3">
            <div class="card dash-widget">
                <a href="~/PayrollDashboard">
                    <div class="card-body">
                        <span class="dash-widget-icon"><i class="fa fa-money"></i></span><br><br>
                        <div class="dash-widget-info">
                            <h3>Payroll</h3>
                            <!-- <span>Clients</span> -->
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-6 text-center">
                    <div class="card">
                        <div class="card-body">
                            <h3 class="card-title">Total Revenue</h3>
                            <div id="bar-charts"></div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 text-center">
                    <div class="card">
                        <div class="card-body">
                            <h3 class="card-title">Sales Overview</h3>
                            <div id="line-charts"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


</div>

